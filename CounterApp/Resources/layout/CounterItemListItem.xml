<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:padding="4dp">

  <Button
        android:id="@+id/AddTenCountButton"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="+10"
        android:layout_alignParentRight="true"/>

  <Button
        android:id="@+id/AddCountButton"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="+1"
        android:layout_toLeftOf="@+id/AddTenCountButton"/>

    <TextView
        android:id="@+id/CounterItemValue"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:text="0"
        android:layout_toLeftOf="@+id/AddCountButton"
        android:gravity="center"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp" />
  
    <Button
        android:id="@+id/SubtractCountButton"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="-1"
        android:layout_toLeftOf="@+id/CounterItemValue"/>

  <Button
        android:id="@+id/SubtractTenCountButton"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="-10"
        android:layout_toLeftOf="@+id/SubtractCountButton"/>

    <TextView
        android:id="@+id/CounterItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text=""
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/SubtractTenCountButton"/>

  <TextView
        android:id="@+id/CounterItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="2018-06-04"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/CounterItemName"/>
</RelativeLayout>